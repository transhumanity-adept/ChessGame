<Window x:Class="ChessGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:chess ="clr-namespace:ChessGame" 
        xmlns:chess_vm_converters ="clr-namespace:ChessGame.ViewModel.Converters" 
        xmlns:chess_vm ="clr-namespace:ChessGame.ViewModel"
        mc:Ignorable="d"        
        Title="MainWindow" Height="750" Width="1000"
        d:DataContext="{d:DesignInstance chess_vm:ChessViewModel, IsDesignTimeCreatable=True}"
        SnapsToDevicePixels="True"
        MinWidth="800" MinHeight="700" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" Background="#312E2B" SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <chess_vm_converters:CellColorConverter x:Key="color_converter"/>
        <chess_vm_converters:ImagePathConverter x:Key="image_path_converter"/>
        <chess_vm_converters:BackgroundCellConverter x:Key="background_converter"/>
        <chess_vm_converters:BackgroundCellWithFigureConverter x:Key="background_figure_converter"/>
        <chess_vm_converters:IsNullConverter x:Key="null_converter"/>
        <chess_vm_converters:CommandParameterMultiConverter x:Key="cmd_multi_converter"/>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="#86c93a" CornerRadius="20">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#86db25"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#86db25" Direction="270" ShadowDepth="5" BlurRadius="30" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="MenuLableStyle" TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <chess_vm:ChessViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="8.5*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0" Background="#21201E"/>
        <Grid Grid.Column="0" Grid.Row="2" Background="#21201E"/>
        <Grid Grid.Column="0" Grid.Row="1" Background="#21201E">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Margin="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Style="{DynamicResource MenuButtonStyle}" Grid.Row="0">
                    <Label Style="{DynamicResource MenuLableStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Новая игра"/>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 5 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Margin="0 0 10 0" Source="C:\Users\79107\Desktop\ChessGame\Images\chess timer.png" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Label Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="25" Foreground="White" Content="{Binding Game.BlackRemainingSeconds}"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 5 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Margin="0 0 10 0" Source="C:\Users\79107\Desktop\ChessGame\Images\chess timer.png" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Label Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="25" Foreground="White" Content="{Binding Game.WhiteRemainingSeconds}"/>
        </Grid>
        <ItemsControl ItemsSource="{Binding Game.Board}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Grid.Column="1" Grid.Row="1">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Command="{Binding DataContext.CellClickCommand,
                            RelativeSource={RelativeSource Mode=FindAncestor,
                            AncestorType=Window}}"
                        Name="Button">
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource cmd_multi_converter}">
                                <Binding ElementName="Button"/>
                                <Binding />
                            </MultiBinding>
                        </Button.CommandParameter>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Content" Value="{Binding Position}"/>
                                <Setter Property="Background" Value="{Binding Color, Converter={StaticResource color_converter}}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Active}" Value="true">
                                        <Setter Property="Background" Value="Red"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsPossible}" Value="true"/>
                                            <Condition Binding="{Binding Path=Figure, Converter={StaticResource null_converter}}" Value="true"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{Binding Color, Converter={StaticResource background_converter}}"/>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsPossible}" Value="true"/>
                                            <Condition Binding="{Binding Path=Figure, Converter={StaticResource null_converter}}" Value="false"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{Binding Color, Converter={StaticResource background_figure_converter}}"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Image Source="{Binding Path=Figure.ImagePath, Converter={StaticResource image_path_converter}}"/>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid x:Name="uniform_grid" Columns="8" Rows="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</Window>
