<Window x:Class="ChessGame.View.PawnChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessGame.View"
        mc:Ignorable="d"
        Title="PawnChange" WindowStyle="None" ResizeMode="NoResize" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="button_queen" Grid.Row="0" ButtonBase.Click="button_Click" BorderThickness="0" Background="WhiteSmoke" >
            <Image></Image>
        </Button>
        <Button x:Name="button_bishop" Grid.Row="1" ButtonBase.Click="button_Click" BorderThickness="0" Background="WhiteSmoke">
            <Image></Image>
        </Button>
        <Button x:Name="button_knight" Grid.Row="2" ButtonBase.Click="button_Click" BorderThickness="0" Background="WhiteSmoke">
            <Image></Image>
        </Button>
        <Button x:Name="button_rook" Grid.Row="3" ButtonBase.Click="button_Click" BorderThickness="0" Background="WhiteSmoke">
            <Image></Image>
        </Button>
    </Grid>
</Window>
